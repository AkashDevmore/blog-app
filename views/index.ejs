<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container">
    <h1>Blog Posts</h1>
    <a href="/new">Create New Post</a>
    <ul>
      <% posts.forEach((post, index) => { %>
        <li>
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
          <a href="/edit/<%= index %>">Edit</a>
          <form action="/delete/<%= index %>" method="POST">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
